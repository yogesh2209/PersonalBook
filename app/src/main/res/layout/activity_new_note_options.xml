<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yogeshkohli.personalbook.NewNoteOptionsActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/buttonAudio"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="230dp"
        android:text="AUDIO"
        android:onClick="noteOptionAudioButtonClicked"
        android:background="@drawable/button_bg_rounded_corners"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDrawing" />

    <Button
        android:id="@+id/buttonDrawing"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:text="DRAW"
        android:onClick="noteOptionDrawButtonClicked"
        android:background="@drawable/button_bg_rounded_corners"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonAudio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonText" />

    <Button
        android:id="@+id/buttonText"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:text="TEXT"
        android:onClick="noteOptionTextButtonClicked"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_bg_rounded_corners"
        app:layout_constraintBottom_toTopOf="@+id/buttonDrawing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNoteOptionHeading" />

    <TextView
        android:id="@+id/textViewNoteOptionHeading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"
        android:text="Please select type of note "
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
