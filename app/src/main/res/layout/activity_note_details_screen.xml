<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yogeshkohli.personalbook.NoteDetailsScreenActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textViewChapterNameNoteDetaiScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:text="@string/chapterNoteDetail"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textViewChapterContentNoteDetaiScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewChapterContentNoteDetaiScreen"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:maxLines="50"
        android:scrollbars="vertical"
        android:text="@string/textviewContentNoteDetai"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewDateNoteDetailScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChapterNameNoteDetaiScreen" />

    <TextView
        android:id="@+id/textViewDateNoteDetailScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:text="@string/textviewDateNoteDetail"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewPasswordenabledNoteDetailScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChapterContentNoteDetaiScreen" />

    <TextView
        android:id="@+id/textViewPasswordenabledNoteDetailScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="11dp"
        android:text="@string/textviewPswdNoteDetail"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewNoteTypeNoteDetailScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDateNoteDetailScreen" />

    <Button
        android:id="@+id/buttonNoteDetailEditScreen"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:onClick="editNoteButtonClicked"
        android:text="@string/editButtonNoteDetail"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNoteTypeNoteDetailScreen" />

    <TextView
        android:id="@+id/textViewNoteTypeNoteDetailScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="49dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/textviewNoteTypeNoteDetail"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNoteDetailEditScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPasswordenabledNoteDetailScreen" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="40dp"
        android:text="@string/delete"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/button_bg_rounded_corners"
        android:onClick="deleteNoteButtonClicked"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonNoteDetailEditScreen" />
</android.support.constraint.ConstraintLayout>
